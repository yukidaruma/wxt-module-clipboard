{
  "name": "wxt-module-clipboard",
  "version": "0.1.1",
  "description": "WXT module for easy clipboard writing from content scripts using Chrome's offscreen API",
  "keywords": [
    "wxt"
  ],
  "homepage": "https://github.com/yukidaruma/wxt-module-clipboard#readme",
  "bugs": {
    "url": "https://github.com/yukidaruma/wxt-module-clipboard/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yukidaruma/wxt-module-clipboard.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/client.d.mts",
        "default": "./dist/client.mjs"
      },
      "require": {
        "types": "./dist/client.d.cts",
        "default": "./dist/client.cjs"
      }
    },
    "./background-plugin": {
      "import": {
        "types": "./dist/background-plugin.d.mts",
        "default": "./dist/background-plugin.mjs"
      },
      "require": {
        "types": "./dist/background-plugin.d.cts",
        "default": "./dist/background-plugin.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --watch"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.277",
    "typescript": "^5",
    "unbuild": "^3.6.1",
    "wxt": "^0.19.16"
  },
  "peerDependencies": {
    "typescript": "^5",
    "wxt": ">=0.19.16"
  }
}
